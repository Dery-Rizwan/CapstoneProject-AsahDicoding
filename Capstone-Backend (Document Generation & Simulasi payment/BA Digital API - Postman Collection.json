        },
        {
          "name": "Get All Attachments",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bapb/{{bapbId}}/attachments",
              "host": ["{{baseUrl}}"],
