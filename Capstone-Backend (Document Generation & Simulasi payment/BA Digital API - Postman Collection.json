{
  "info": {
    "name": "BA Digital System API",
    "description": "API Collection for BAPB & BAPP System - Week 2 Complete",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    },
    {
      "key": "bapbId",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"vendor@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"Vendor Test\",\n  \"role\": \"vendor\",\n  \"phone\": \"081234567890\",\n  \"company\": \"PT Test Vendor\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"vendor@example.com\",\n  \"password\": \"password123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/auth/profile",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["users"],
              "query": [
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Get Users by Role",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/users/role/vendor",
              "host": ["{{baseUrl}}"],
              "path": ["users", "role", "vendor"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"phone\": \"081234567899\",\n  \"company\": \"PT Updated Company\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["users", "profile"]
            }
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"currentPassword\": \"password123\",\n  \"newPassword\": \"newpassword123\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/users/change-password",
              "host": ["{{baseUrl}}"],
              "path": ["users", "change-password"]
            }
          }
        }
      ]
    },
    {
      "name": "BAPB",
      "item": [
        {
          "name": "Create BAPB",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "const jsonData = pm.response.json();",
                  "if (jsonData.success && jsonData.data.id) {",
                  "    pm.collectionVariables.set('bapbId', jsonData.data.id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderNumber\": \"PO-2024-001\",\n  \"deliveryDate\": \"2024-01-20\",\n  \"notes\": \"Pengiriman barang sesuai PO\",\n  \"items\": [\n    {\n      \"itemName\": \"Laptop Dell XPS 13\",\n      \"quantityOrdered\": 10,\n      \"quantityReceived\": 10,\n      \"unit\": \"unit\",\n      \"condition\": \"baik\",\n      \"notes\": \"Semua unit dalam kondisi baik\"\n    },\n    {\n      \"itemName\": \"Mouse Wireless Logitech\",\n      \"quantityOrdered\": 20,\n      \"quantityReceived\": 20,\n      \"unit\": \"unit\",\n      \"condition\": \"baik\"\n    }\n  ]\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/bapb",
              "host": ["{{baseUrl}}"],
              "path": ["bapb"]
            }
          }
        },
        {
          "name": "Get All BAPB",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bapb?status=draft&page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["bapb"],
              "query": [
                {"key": "status", "value": "draft"},
                {"key": "page", "value": "1"},
                {"key": "limit", "value": "10"}
              ]
            }
          }
        },
        {
          "name": "Get BAPB by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bapb/{{bapbId}}",
              "host": ["{{baseUrl}}"],
              "path": ["bapb", "{{bapbId}}"]
            }
          }
        },
        {
          "name": "Submit BAPB",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bapb/{{bapbId}}/submit",
              "host": ["{{baseUrl}}"],
              "path": ["bapb", "{{bapbId}}", "submit"]
            }
          }
        },
        {
          "name": "Approve BAPB",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"notes\": \"Barang sesuai dengan pesanan dan dalam kondisi baik\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/bapb/{{bapbId}}/approve",
              "host": ["{{baseUrl}}"],
              "path": ["bapb", "{{bapbId}}", "approve"]
            }
          }
        },
        {
          "name": "Reject BAPB",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rejectionReason\": \"Barang tidak sesuai spesifikasi\",\n  \"notes\": \"Laptop yang diterima berbeda model\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/bapb/{{bapbId}}/reject",
              "host": ["{{baseUrl}}"],
              "path": ["bapb", "{{bapbId}}", "reject"]
            }
          }
        },
        {
          "name": "Request Revision",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"revisionReason\": \"Perlu melengkapi dokumen pendukung\",\n  \"notes\": \"Harap lampirkan invoice asli\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{baseUrl}}/bapb/{{bapbId}}/revision",
              "host": ["{{baseUrl}}"],
              "path": ["bapb", "{{bapbId}}", "revision"]
            }
          }
        },
        {
          "name": "Get Approval History",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/bapb/{{bapbId}}/approvals",
              "host": ["{{baseUrl}}"],
              "path": ["bapb", "{{bapbId}}", "approvals"]
            }
          }
        }
      ]
    },
