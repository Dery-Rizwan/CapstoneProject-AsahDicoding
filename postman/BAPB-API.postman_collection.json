{
  "info": {
    "name": "BAPB System API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:5000/api",
      "type": "default"
    },
    {
      "key": "token",
      "value": "",
      "type": "default"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register Vendor",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"vendor1@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"PT Vendor Jaya\",\n  \"role\": \"vendor\",\n  \"phone\": \"081234567890\",\n  \"company\": \"PT Vendor Jaya\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/register",
              "host": ["{{base_url}}"],
              "path": ["auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.data && jsonData.data.token) {",
                  "    pm.collectionVariables.set('token', jsonData.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"vendor1@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/auth/login",
              "host": ["{{base_url}}"],
              "path": ["auth", "login"]
            }
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/auth/profile",
              "host": ["{{base_url}}"],
              "path": ["auth", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "BAPB",
      "item": [
        {
          "name": "Create BAPB",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderNumber\": \"PO-2024-001\",\n  \"deliveryDate\": \"2024-11-15\",\n  \"notes\": \"Pengiriman barang batch pertama\",\n  \"items\": [\n    {\n      \"itemName\": \"Laptop Dell Latitude 5420\",\n      \"quantityOrdered\": 10,\n      \"quantityReceived\": 10,\n      \"unit\": \"unit\",\n      \"condition\": \"baik\",\n      \"notes\": \"Semua unit dalam kondisi baik\"\n    },\n    {\n      \"itemName\": \"Mouse Wireless Logitech\",\n      \"quantityOrdered\": 10,\n      \"quantityReceived\": 9,\n      \"unit\": \"unit\",\n      \"condition\": \"kurang\",\n      \"notes\": \"1 unit kurang dari pesanan\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/bapb",
              "host": ["{{base_url}}"],
              "path": ["bapb"]
            }
          }
        },
        {
          "name": "Get All BAPB",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bapb?page=1&limit=10",
              "host": ["{{base_url}}"],
              "path": ["bapb"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "draft",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get BAPB by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bapb/:id",
              "host": ["{{base_url}}"],
              "path": ["bapb", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "your-bapb-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Update BAPB",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"orderNumber\": \"PO-2024-001-REVISED\",\n  \"deliveryDate\": \"2024-11-16\",\n  \"notes\": \"Update tanggal pengiriman\",\n  \"items\": [\n    {\n      \"itemName\": \"Laptop Dell Latitude 5420\",\n      \"quantityOrdered\": 10,\n      \"quantityReceived\": 10,\n      \"unit\": \"unit\",\n      \"condition\": \"baik\"\n    }\n  ]\n}"
            },
            "url": {
              "raw": "{{base_url}}/bapb/:id",
              "host": ["{{base_url}}"],
              "path": ["bapb", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "your-bapb-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Submit BAPB",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bapb/:id/submit",
              "host": ["{{base_url}}"],
              "path": ["bapb", ":id", "submit"],
              "variable": [
                {
                  "key": "id",
                  "value": "your-bapb-id-here"
                }
              ]
            }
          }
        },
        {
          "name": "Delete BAPB",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/bapb/:id",
              "host": ["{{base_url}}"],
              "path": ["bapb", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "your-bapb-id-here"
                }
              ]
            }
          }
        }
      ]
    }
  ]
}